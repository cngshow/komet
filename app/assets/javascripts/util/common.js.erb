var Common = new function () {
  //public functions
  this.cursor_wait = function () {
    $('body').css('cursor', 'wait');
  };

  this.cursor_auto = function () {
    $('body').css('cursor', 'auto');
  };

  this.alerty = function(value) {
    alert("alerty says " + value);
  };

  this.sleep = function(milliseconds) {
    var start = new Date().getTime();
    for (var i = 0; i < 1e7; i++) {
      if ((new Date().getTime() - start) > milliseconds) {
        break;
      }
    }
  };

  this.in_array = function(array, value) {
    var i = array.length;

    while (i--) {
      if (array[i] == value) {
        return true;
      }
    }
    return false;
  };

  this.arr_diff = function(a1, a2) {
    var a = [], diff = [];
    for (var i = 0; i < a1.length; i++) {
      a[a1[i]] = true;
    }
    for (var i = 0; i < a2.length; i++) {
      if (a[a2[i]]) {
        delete a[a2[i]];
      } else {
        a[a2[i]] = true;
      }
    }
    for (var k in a) {
      diff.push(k);
    }
    return diff;
  };

};

