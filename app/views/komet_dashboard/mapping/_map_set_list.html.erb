      <div class="fa fa-square fa-stack-2x"></div>
      <div class="fa fa-code-fork fa-stack-1x fa-inverse"></div>
    </div>
  </div>

  <div id="komet_mapping_overview_sets_<%= @viewer_id %>" style="height: 450px;" class="ag-fresh"></div>

  <div>
    <div class="fa fa-plus" title="Create New Map Set" onclick="WindowManager.viewers[<%= @viewer_id %>].openSetEditor(true);"></div>
    <div id="komet_mapping_overview_set_delete_<%= @viewer_id %>" class="fa fa-minus ui-state-disabled" title="Delete Selected Map Set"></div>
    <div id="komet_mapping_overview_set_edit_<%= @viewer_id %>" class="fa fa-pencil ui-state-disabled" title="Edit Selected Map Set" onclick="WindowManager.viewers[<%= @viewer_id %>].openSetEditor(false);"></div>
