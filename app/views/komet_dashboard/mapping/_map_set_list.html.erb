<div id="komet_mapping_section_<%= @viewer_id %>">

  <div>
    Mapping Sets
    <%= label_tag "komet_mapping_overview_page_size_#{@viewer_id}", 'Page Size:' %>
    <%= select_tag "komet_mapping_overview_page_size_#{@viewer_id}", options_for_select([['25'], ['50'], ['100'], ['250'], ['500'], ['1000']], '25')  %>
    <div id="komet_mapping_overview_sets_refresh_<%= @viewer_id %>" title="Reload Mapping Set Grid" class="fa fa-refresh" onclick="WindowManager.viewers[<%= @viewer_id %>].loadOverviewSetsGrid();"></div>
    <div id="komet_mapping_overview_sets_stamp_<%= @viewer_id %>" title="Toggle STAMP Fields" class="fa fa-user" onclick="WindowManager.viewers[<%= @viewer_id %>].toggleOverviewSTAMP();"></div>
