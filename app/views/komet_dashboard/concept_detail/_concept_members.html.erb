<% if @concept_members.empty? %>
    <div class="komet-no-data-message">This concept has no members.</div>
<% else %>

  <table class="concept_detail_table">
    <thead>
      <tr>
        <th>Term</th>
        <th>Concept ID</th>
      </tr>
    </thead>
    <tbody>

    <% @concept_members.each do |member| %>
        <tr>
          <td>
            <%= member[:term] %>
          </td>
          <td><%= member[:concept_id] %></td>
        </tr>
    <% end %>

    </tbody>
  </table>

<% end %>