<!-- DO NOT PUT ANYTHING ABOVE THE KOMET VIEWER DIV - IT WILL BREAK WINDOWING WHEN CLOSING VIEWERS-->
<div class="panel panel-default komet-no-margins komet-panel komet-concept-edit" id="komet_viewer_<%= @viewer_id %>" data-komet-viewer-id="<%= @viewer_id %>">

    <%= form_tag(taxonomy_edit_concept_path, method: 'post', id: "komet_concept_edit_form_#{@viewer_id}") do %>

        <input type="hidden" name="concept_id" value="<%= @concept_id %>">

        <div class="panel-heading">
            <span class="panel-title komet-section-title">
              <span id="komet_concept_panel_tree_link_<%= @viewer_id %>" class="fa fa-chain-broken" onclick="WindowManager.toggleViewerLinkage('<%= @viewer_id %>', WindowManager.getLinkedViewerID() != '<%= @viewer_id %>');" title="Viewer linked to Taxonomy Tree. Click to unlink."></span>
                Edit: <%= @concept_text %>
            </span>

            <div class="komet-panel-tools">
                <!--<div class="glyphicon glyphicon-new-window"></div>
                <div class="glyphicon glyphicon-resize-full"></div>-->
                <div class="glyphicon glyphicon-remove" onclick="WindowManager.closeViewer('<%= @viewer_id %>')"></div>
            </div>
        </div>

        <div class="panel-body" id="komet_concept_editor_section_<%= @viewer_id %>">

            <div class="komet-concept-body-tools">

                <div class="komet-flex-right">
                    <label for="komet_concept_editor_properties_<%= @viewer_id %>">Properties</label>
                    <input type="checkbox" id="komet_concept_editor_properties_<%= @viewer_id %>" checked onclick="WindowManager.viewers[<%= @viewer_id %>].toggleProperties()">
                </div>

            </div>

            <div id="komet_concept_save_section_<%= @viewer_id %>">
                All fields required except where noted as Optional.
                <button type="button" class="btn btn-default" onclick="WindowManager.viewers[<%= @viewer_id %>].cancelAction('<%= @viewer_previous_content_type %>', '<%= @viewer_previous_content_id %>')">Cancel</button>
                <button type="button" class="btn btn-primary ui-state-disabled" id="komet_concept_save_<%= @viewer_id %>" onclick="WindowManager.viewers[<%= @viewer_id %>].showSaveSection('confirm')">Save</button>
            </div>

            <div id="komet_concept_confirm_section_<%= @viewer_id %>" class="komet-form-warning">
                Are you sure you want to commit changes?
                <button type="button" class="btn btn-default" onclick="WindowManager.viewers[<%= @viewer_id %>].showSaveSection('save')">No</button>
                <button class="btn btn-primary">Yes</button>
            </div>

            <div id="mainblockattributes">
                <div class="komet-concept-section-title komet-concept-attributes-title">ATTRIBUTES</div>
                <div id="komet_concept_attributes_panel_<%= @viewer_id %>" class="komet-concept-section-panel komet-concept-attributes-panel">

                    <!-- main header block - always visible -->
                    <div class="komet-concept-section-panel-header">

                        <!-- Status -->
                        <div class="komet-concept-attributes-status">
                            <select id="komet_concept_Status">
                                <option value="Active">Active</option>
                                <option value="InActive">InActive</option>
                            </select>
                        </div>
                        <!-- Defined -->
                        <div id="definedDiv"></div>
                        <div>
                            <select id="komet_concept_defined">
                                <option value="Primitive">Primitive</option>
                                <option value="Fully Defined">Fully Defined</option>
                            </select>
                        </div>

                    </div>

                </div>
            </div>

            <div class="komet-concept-section-title komet-concept-description-title">
                DESCRIPTIONS
                <div class="komet-flex-right">
                    <div class="komet-concept-add-description" onclick="WindowManager.viewers[<%= @viewer_id %>].addDescriptionRow()">
                        Add Description
                        <div class="glyphicon glyphicon-plus-sign"></div>
                    </div>
                </div>
            </div>

            <div class="komet-concept-section-title komet-concept-associations-title">
                ASSOCIATIONS
                <div class="komet-flex-right">
                    <div class="komet-concept-add-association" onclick="WindowManager.viewers[<%= @viewer_id %>].addAssociationRow()">
                        Add Association
                        <div class="glyphicon glyphicon-plus-sign"></div>
                    </div>
                </div>
            </div>

            <div id="komet_concept_associations_panel_<%= @viewer_id %>" class="komet-concept-section-panel komet-concept-associations-panel">
                <div class="komet-concept-section-panel-details komet-changeable"></div>
            </div>

        </div>
    <% end # end form  %>
</div>

<script>

    if (!WindowManager.viewers.hasOwnProperty('<%= @viewer_id %>') || !(WindowManager.viewers[<%= @viewer_id %>] instanceof ConceptViewer)) {
        ConceptsModule.createViewer("<%= @viewer_id %>", "<%= @concept_id %>", "<%= @viewer_action %>");
    } else {

        WindowManager.viewers[<%= @viewer_id %>].currentConceptID = "<%= @concept_id %>";
        WindowManager.viewers[<%= @viewer_id %>].viewerAction = "<%= @viewer_action %>";

        if (WindowManager.getLinkedViewerID() == "<%= @viewer_id %>") {
            WindowManager.viewers[<%= @viewer_id %>].swapLinkIcon(true);
        }
    }

    if (WindowManager.getLinkedViewerID() == "<%= @viewer_id %>" && TaxonomyModule.tree.selectedConceptID != WindowManager.viewers[<%= @viewer_id %>].currentConceptID) {
        WindowManager.viewers[<%= @viewer_id %>].showInTaxonomyTree();
    }

    $(document).ready(function () {

        var selectOptions = {
            language: <%= raw @language_options.to_json %>,
            dialect: <%= raw @dialect_options.to_json %>,
            case: <%= raw @case_options.to_json %>,
            acceptability: <%= raw @acceptability_options.to_json %>,
            descriptionType: <%= raw @description_type_options.to_json %>,
            associationType: <%= raw @association_type_options.to_json %>
        };

        WindowManager.viewers[<%= @viewer_id %>].editConcept(<%= raw @attributes.to_json %>, <%= raw @descriptions.to_json %>, <%= raw @associations.to_json %>, selectOptions);
        UIHelper.initializeContextMenus();
    });
</script>